@model Product

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Watersport Page</title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
</head>
<body>
<div>
    <h6 class="bg-primary text-white text-center m-2 p-2">Watersports</h6>
    <div class="m-2">
        <table class="table table-sm table-striped table-bordered"
               data-id="@Model.ProductId">
            <tbody>
            <tr>
                <th>Name</th>
                @if (Model.Price > 200)
                {
                    <td>Luxury @Model.Name</td>
                }
                else
                {
                    <td>Basic @Model.Name</td>
                }
            </tr>
            <tr>
                <th>Price</th>
                <td>@Model.Price.ToString("c")</td>
            </tr>
            <tr>
                <th>Tax</th>
                <td>@Model.Price * 0.2m</td>
            </tr>
            <tr>
                <th>Tax</th>
                <td>@(Model.Price * 0.2m)</td>
            </tr>
            <tr>
                <th>
                    category Id
                </th>
                <td>@Model.CategoryId</td>
            </tr>
            <tr>
                <th>SupplierId</th>
                <td>@Model.SupplierId</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<a href="/Home/List">List Page</a>
</body>
</html>